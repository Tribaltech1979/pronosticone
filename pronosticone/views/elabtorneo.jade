extends layout
block mainbar
    input(type='hidden', name='torneo', value="#{list[0].cod_torneo}")
    input(type='hidden', name='giorn', value="#{list[0].nro_giornata}")
    table.table-bordered
        thead
            tr
                th Squadra
                th Squadra
                th Punti
                th Punti
                th Gol
                th Gol

        tbody
            - each item in list
                tr
                    td= item.sq_home
                    td= item.sq_away
                    td= item.punti_casa
                    td= item.punti_away
                    td= item.gol_casa
                    td= item.gol_away
block mainleft
    div.btn-group-vertical
        button.btn.btn-success#btnSubmit(type="button", value="Salva", onclick='save()') Salva